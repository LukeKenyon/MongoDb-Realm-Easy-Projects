<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="eProjectsOnRealm.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:eProjectsOnRealm.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" Route="Login" />
    </TabBar>
    <TabBar Route="Main">
        <ShellContent
            Title="Projects"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Messeges"
            ContentTemplate="{DataTemplate local:UsersPage}"
            Route="UsersPage" />
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="ProfilePage" />
    </TabBar>


</Shell>
